<template name="search">
	<view class="padding-sm text-gray" style="width:100%;" data-url="/pages/util/search" bindtap="navigatePage">
		<view class="flex text-center bg-gray" style="background-color: #f0f0f0cc;width:90%;margin:0 auto;border-radius: 80rpx;height:80rpx;">
			<view class="flex-sub">
				<view style="width:360rpx;margin:auto;height:80rpx;">
					<view style="width:40rpx;float:left;">
						<image style="margin-top:20rpx;width:40rpx;height:40rpx;" src="/img/search-icon.png"></image>
					</view>
					<view style="width:300rpx;font-size:30rpx;line-height:80rpx;float:left;">搜索你感兴趣的内容</view>
				</view>
			</view>
		</view>
	</view>
</template>
<template name="searchinput">
	<view class="padding-sm text-gray" style="width:100%;">
		<view class="flex text-center bg-gray" style="width:90%;margin:0 auto;border-radius: 80rpx;height:80rpx;">
			<view class="flex-sub text-right">
						<image style="margin-top:20rpx;width:40rpx;height:40rpx;" src="/img/search-icon.png"></image>
			</view>
			<view class="flex-8 padding-left">
						<input class="text-left" style="width:100%;height:80rpx;font-size:40rpx;" type="text" value="{{inputvalue}}" bindinput="input"></input>
			</view>
		</view>
	</view>
</template>